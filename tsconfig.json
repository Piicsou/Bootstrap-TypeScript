{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es6",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "pretty": true,
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "outDir": "dist/",
        "baseUrl": "src/"
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules"]
}
